<header class="header">
	<div class="container d-flex">
		<a href="{{ site.url }}" rel="home" title="{{ site.title }}">
			{{ source(assetsImg ~ 'brand/logo.svg')|raw }}
		</a>

		<ul class="navbar-nav flex-row flex-wrap bd-navbar-nav pt-2 py-md-0">
			{% for item in menu.items %}
				<li class="nav-item">
					<a class="nav-link p-2{{ item.current ? ' active' }}"
						href="{{ item.url }}"
						title="{{ item.title }}">
						{{ item.title }}
					</a>
				</li>
			{% endfor %}
		</ul>

		<div class="menu" id="ham">
			<div class="nav-top">
				<span></span>
				<span></span>
			</div>
			<nav class="nav-drill px-4 px-md-5">
				<ul class="navbar-nav__top navbar-nav flex-column mb-4">
					{% for item in menu.items %}
						<li class="nav-item">
							<a class="nav-link p-2{{ item.current ? ' active' }}"
								href="{{ item.url }}"
								title="{{ item.title }}">
								{{ item.title }}
							</a>
						</li>
					{% endfor %}
				</ul>
			</nav>
		</div>
	</div>
</header>
