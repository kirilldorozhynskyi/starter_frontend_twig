<nav class="main-nav">
	<ul class="list-unstyled main-nav-list gap-1 d-flex flex-column flex-lg-row align-items-center mb-0">
		{% for item in header_menu %}
			<li class="d-inline-block main-nav-item {{ item.children ? 'sub' }}">
				<a class="main-nav-link {{ item.current or item.current_item_parent ? 'active' }}"
					href="{{ item.url }}"
					target="{{ item.target ? '_blank' : '_self' }}">
					{{ item.title }}
				</a>
			</li>
		{% endfor %}
	</ul>
</nav>
